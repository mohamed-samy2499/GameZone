@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "Add or Remove Users";
}
<h2>Add or remove users from this role</h2>
<form method="post" class="form-control">

    @*@foreach (var user in Model)*@
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="row">

            <div class="form-check">
                <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input"  />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                <input asp-for="@Model[i].UserId" hidden />
                <input asp-for="@Model[i].UserName" hidden />
            </div>
        </div>
    }
    <div>
        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-light">Return to Roles</a>


    </div>
</form>