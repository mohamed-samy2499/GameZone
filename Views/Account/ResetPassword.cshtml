@model ResetPasswordViewModel   
@{
    ViewData["Title"] = "ResetPassword";
    var email =  ViewData["email"];
    var token =  ViewData["token"];

}

<section class="vh-100" @* style="background-color: #eee;" *@>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Reset Password</p>

                                <form class="mx-1 mx-md-4" asp-action="ResetPassword" asp-controller="Account">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input type="email" hidden asp-for="Email" value="@email">
                                    <input type="text" hidden asp-for="Token" value="@token">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Password</label>
                                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example5c">Confirm Password</label>
                                            <input type="password" id="form3Example5c" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">

                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" id="form2Example6c" asp-for="IsAgree" />
                                        <label class="form-check-label" for="form2Example6c">
                                            I read and agree to the terms of usage
                                        </label>
                                        <span asp-validation-for="IsAgree" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg m-2">Reset</button>
                                    </div>
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}